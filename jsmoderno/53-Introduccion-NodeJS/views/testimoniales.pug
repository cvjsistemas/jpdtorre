extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales
        .row

          .col-md-12
            h2.d-block.w-100.text-center Agrega un Testimonial

            //- p= JSON.stringify(errores)
            if(errores)
                each error in errores
                    .alert.col.alert-danger.text-center=error.mensaje

            .row.justify-content-center.col 
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text",placeholder="Nombre",name="nombre",class="form-control",value=nombre)
                        .form-group
                            label(for="correo") Correo
                            input#nombre(type="email",placeholder="Correo",name="correo",class="form-control",value=correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(placeholder="Correo",name="mensaje",class="form-control",rows=3)= mensaje
                         
                        input.btn.btn-sucess.btn-block(type="submit")